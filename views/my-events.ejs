<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Events | Eventify</title>
    <link rel="stylesheet" href="/home.css">
    <link rel="stylesheet" href="/events.css">
    <style>
        .my-events-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .my-events-header h1 {
            color: #333;
            margin-bottom: 0.5rem;
        }
        
        .my-events-header p {
            color: #666;
            font-size: 1.1rem;
        }
        
        .event-actions {
            display: flex;
            gap: 0.5rem;
            margin-top: 1rem;
        }
        
        .btn-edit {
            background-color: #ffc107;
            color: #000;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            text-decoration: none;
            font-size: 0.9rem;
            transition: background-color 0.3s;
        }
        
        .btn-edit:hover {
            background-color: #e0a800;
        }
        
        .btn-delete {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            text-decoration: none;
            font-size: 0.9rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        .btn-delete:hover {
            background-color: #c82333;
        }
        
        .no-events {
            text-align: center;
            padding: 3rem;
            color: #666;
        }
        
        .no-events h3 {
            margin-bottom: 1rem;
            color: #333;
        }
        
        .create-event-link {
            display: inline-block;
            background-color: #007bff;
            color: white;
            padding: 0.75rem 1.5rem;
            text-decoration: none;
            border-radius: 4px;
            margin-top: 1rem;
            transition: background-color 0.3s;
        }
        
        .create-event-link:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <main class="events-page-main">
        <div class="container">
            <section class="my-events-header">
                <h1>My Events</h1>
                <p>Manage the events you've created</p>
            </section>

            <section class="all-events-section">
                <div class="event-grid">
                    <% if (events && events.length > 0) { %>
                        <% events.forEach(event => { %>
                            <article class="event-card">
                                <img class="event-image" src="<%= event.image %>" alt="<%= event.title %> Poster">
                                <div class="event-details">
                                    <h3 class="card-title"><%= event.title %></h3>
                                    <p class="card-location"><%= event.date.toLocaleDateString() %></p>
                                    <p class="card-price">â‚¹<%= event.price %></p>
                                    <div class="event-actions">
                                        <a href="/events/<%= event._id %>" class="btn btn-secondary">View Details</a>
                                        <a href="/events/<%= event._id %>/edit" class="btn-edit">Edit</a>
                                        <button class="btn-delete" onclick="deleteEvent('<%= event._id %>', '<%= event.title %>')">Delete</button>
                                    </div>
                                </div>
                            </article>
                        <% }) %>
                    <% } else { %>
                        <div class="no-events">
                            <h3>You haven't created any events yet</h3>
                            <p>Start creating amazing events for your audience!</p>
                            <a href="/events/create" class="create-event-link">Create Your First Event</a>
                        </div>
                    <% } %>
                </div>
            </section>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script>
        function deleteEvent(eventId, eventTitle) {
            if (confirm(`Are you sure you want to delete "${eventTitle}"? This action cannot be undone.`)) {
                fetch(`/events/${eventId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Event deleted successfully!');
                        location.reload();
                    } else {
                        alert('Failed to delete event: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('An error occurred while deleting the event');
                });
            }
        }
    </script>
</body>
</html>
